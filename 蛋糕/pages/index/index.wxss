/**index.wxss**/
.swiperView {
  width: 100%;
  height: 400rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
}
.menus {
  position: relative;
  width: 100%;
  height: 200rpx;
  background-color: #F5F5F5;
  box-sizing:border-box;
  padding-bottom: 20rpx;
}
.menu {
  width: 25%;
  height: 180rpx;
  box-sizing:border-box;
  padding: 30rpx 40rpx 30rpx 40rpx;
  float: left;
  background: white;
}
.menuImg{
  height: 107rpx;
  border-radius:50%;
}
.menuTitle {
  height: 20%;
  text-align: center;
  font-size: 13px;
  font-family: "黑体";

}
.menuImg ,.menuTitle{
  width: 100%;
  float: left;
}
.goods{
  position: relative;
  width: 100%;
  height: 450rpx;
}
.goods view{
  float: left;
  box-sizing:border-box;
}
 .goods view:nth-child(1){
  width: 40%;
  height: 100%;
  padding: 0 5px 5px 5px;
}
.goods view:nth-child(2),.goods view:nth-child(3){
  width: 60%;
  height: 50%;
  padding-right: 5px;
  padding-bottom: 5px;
} 
.goodsImg{
  width: 100%;
  height: 100%;
}
.goods_big {
  width: 100%;
}
.goods_big image {
  width: 100%;
}


/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}